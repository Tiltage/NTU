int i,j=0,count=0;
for (i=0;i<size;i++)
{
    if (a[i]!=a[i-1])
    {
        count++;
    }
    else
    {
        while (a[i-1]==a[i+j])
        {
            j++;
        }
        a[i]=a[i+j];
        
        if (i+j>size-1)
        {
            break;
        }
        count++;
        j=0;
    }
    
}
return count;
