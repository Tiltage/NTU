int i,max=0,j=0,k=1;
char target[20];
for (i=0;i<strlen(str);i++)
{
   if (*(str+i)>max)
   {
       max=*(str+i);
       j=i;
   }
}
*(target)=max;
//puts(target);
for (i=0;i<strlen(str);i++)
{
    if (i!=j)
    {
        *(target+k)=*(str+i);
        k++;
        
    }
    else if (i==j)
    {

        //puts(target);
        continue;
    }
    
}
//puts(target); - target is correct
for (i=0;i<strlen(str);i++)
{
    *(str+i)=*(target+i);
}
