int i,len,count=1;
len=strlen(str);
for (i=0;i<len;i++)
{
    if (str[i]==str[i+1])
    {
        count++;
    }
    else
    {
        if (count!=1)
        {
            printf("[%d%c]",count,str[i]);
            count=1;
        }
        else
        {
            printf("%c",str[i]);
            count=1;
        }
    }
    
}
