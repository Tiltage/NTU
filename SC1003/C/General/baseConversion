//decToOctal

#include <stdio.h>
#include <math.h>
int main()
{
int num,ans=0,remainder,count=0;
printf("Enter a decimal number: \n");
scanf("%d",&num);
while (num!=0)
{
    remainder=num%8;
    ans+=pow(10,count)*remainder;
    count++;
    num/=8;
}



printf("The equivalent octal number: %d",ans);

   return 0;  
}

//decToBinary

#include <stdio.h>
#include <math.h>
int main()
{
   int i,num,remainder,ans=0,count=0;
   printf("Enter a decimal number: \n");
   scanf("%d",&num);
   while (num!=0)
   {
       remainder=num%2;
       ans+=pow(10,count)*remainder;
       count++;
       num/=2;
   }
   printf("The equivalent binary number: %d",ans);
   return 0;  
}

//octToDec

#include <stdio.h>
#include <math.h>
int main()
{      
int i,count=0,num,remainder,ans=0;
printf("Enter an octal number: \n");
scanf("%d",&num);
while(num!=0)
{
    remainder=num%10;
    ans+=pow(8,count)*remainder;
    count++;
    num/=10;
}
printf("The equivalent decimal number: %d",ans);
   return 0;  
}

//binToDec

#include <stdio.h>
#include <math.h>
int main() 
{        
   int ans=0,remainder,count=0,num;
   printf("Enter a binary number: \n");
   scanf("%d",&num);
   while(num!=0)
   {
       remainder=num%10;
       ans+=pow(2,count)*remainder;
       count++;
       num/=10;
   }
   printf("The equivalent decimal number: %d",ans);
   return 0;  
}

//hexToDec

#include <stdio.h>
#include <math.h>
#include <string.h>
int hexStrToDec(char *hex);
int main()
{
   int num;
   char hex[100];
   
   printf("Enter a hexadecimal number: \n"); 
   scanf("%s",&hex);
   num=hexStrToDec(hex);
   printf("hexStrToDec(): %d\n", num);
   return 0;
}

int hexStrToDec(char *hex)

{
   int count=0,i,num,ans=0;
   for (i=strlen(hex)-1;i>=0;i--)
   {
       num=*(hex+i);
       if (num>57)
       {
           num-=55;
       }
       else
       {
           num-=48;
       }
       ans+=pow(16,count)*num;
       count++;
   }
   return ans;
}

//decToHex
#include <stdio.h>
void decTohexStr(char *str, int num);
int main()
{
   int num,i;
   char str[20];
   printf("Enter a decimal number: \n");
   scanf("%d",&num);
   decTohexStr(str,num);
   printf("decTohexStr(): ");
   printf("%s\n",str);
   return 0;
}
void decTohexStr(char *str, int num)
{
char *p2;
int i,j,len;
char temp;

p2=str;
while (num!=0)
{
    j=num%16;
    if (j<10)
    {
        *p2=j+48;
    }
    else
    {
        *p2=j+55;
    }
    num=num/16;
    p2++;
}
*p2='\0';
len=strlen(str);
for (i=0;i<len/2;i++)
{
    temp=*(str+i);
    *(str+i)=*(str+len-1-i);
    *(str+len-1-i)=temp;
}

}

